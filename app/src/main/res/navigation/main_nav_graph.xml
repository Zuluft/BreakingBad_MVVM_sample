<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navGraph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.zuluft.autoschool.presentation.main.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">


        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zuluft.autoschool.presentation.main.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="homeScreenDataModel"
            app:argType="com.zuluft.autoschool.domain.models.dataModels.HomeScreenDataModel" />
    </fragment>
</navigation>